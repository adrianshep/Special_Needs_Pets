<div class="pets index">
  <h2>User: <%= current_user.email %></h2>

  <%= link_to("Add New Pet", new_pet_path(@pet), :class => 'action new') %>

  <table class="listing" summary="Pet list">
    <% @pets.each do |pet| %>
    <tr>
      <td><%= link_to image_tag(pet.pict_url), pet_path(pet) %></td>
      <td><%= pet.name %></td>
    </tr>
    <% end %>
  </table>
</div>
